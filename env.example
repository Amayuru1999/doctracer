# DocTracer Environment Configuration
# Copy this file to .env and update the values as needed

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# Flask Backend Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=doctracer
FLASK_SECRET_KEY=your-secret-key-here

# API Configuration
API_URL=http://localhost:5000
API_VERSION=v1

# External Service API Keys (optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration (if using additional databases)
DATABASE_URL=postgresql://user:password@localhost:5432/doctracer

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/doctracer.log

# Security Configuration
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
JWT_SECRET_KEY=your-jwt-secret-key-here

# Performance Configuration
MAX_WORKERS=4
REQUEST_TIMEOUT=120
CACHE_TTL=3600
