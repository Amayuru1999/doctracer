# Production Environment Variables for Digital Ocean
# Copy this file to .env on your Digital Ocean server and update the values

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_neo4j_password_here

# API Configuration
API_URL=http://your-domain.com:5001

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Security (IMPORTANT: Generate secure random strings for production)
SECRET_KEY=your_very_secure_secret_key_here
JWT_SECRET_KEY=your_very_secure_jwt_secret_here

# Optional: SSL Configuration (if using HTTPS)
# API_URL=https://your-domain.com:5001